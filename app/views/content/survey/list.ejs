<link rel="stylesheet" type="text/css" href="./content/style.css">
<div class="container">

    <h1><%=title %></h1>
    <a href="/survey-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Create A New Survey
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                <tr>
                    <th scope="col" class="text-center">#</th>
                    <th scope="col">Topic</th>
                    <th scope="col">Question 1</th>
                    <th scope="col">Option 1</th>
                    <th scope="col">Option 2</th>
                    <th scope="col">Option 3</th>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="surveyList">
                <% for(let count=0; count < survey.length; count++) { %>
                    <tr>
                        <td scope="row" class="text-center"></td>
                        <td><%= survey[count].topic %></td>
                        <td><%= survey[count].question1 %></td>
                        <td><%= survey[count].option1 %></td>
                        <td><%= survey[count].option2 %></td>
                        <td><%= survey[count].option3 %></td>
                        <td class="text-center col-1">
                            <a class="btn btn-primary" href="/survey-edit/<%= survey[count].id %>">
                                Edit
                            </a>
                        </td>
                        <td class="text-center col-1">
                            <a class="btn btn-warning" href="/survey-delete/<%= survey[count].id %>">
                                Delete
                            </a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>